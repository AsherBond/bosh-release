#!/bin/bash

# Avoid Neighbour table overflow
sysctl -w net.ipv4.neigh.default.gc_thresh3=4096
sysctl -w net.ipv4.neigh.default.gc_thresh2=2048
sysctl -w net.ipv4.neigh.default.gc_thresh1=1024

export PATH=/var/vcap/packages/ruby/bin:$PATH
export BUNDLE_GEMFILE=/var/vcap/packages/nats/Gemfile

RUN_DIR=/var/vcap/sys/run/nats
LOG_DIR=/var/vcap/sys/log/nats
PIDFILE=$RUN_DIR/nats.pid

case $1 in

  start)
    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > $PIDFILE
    exec bundle exec nats-server -c /var/vcap/jobs/nats/config/nats.yml >>$LOG_DIR/nats.stdout.log 2>>$LOG_DIR/nats.stderr.log
    ;;

  stop)
    PID=$(head -1 $PIDFILE)
    kill $PID
    while [ -e /proc/$PID ]; do sleep 0.1; done
    rm -f $PIDFILE
    ;;

  *)

  echo "Usage: nats_ctl {start|stop}" ;;
esac
exit 0
